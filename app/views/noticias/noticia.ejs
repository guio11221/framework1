  </head>
  <body>

    <%- include ('../menu/nav.ejs') %>

    <center>
		<h1>Notícias</h1>
	</center>


  <table
  id="table"
  data-toggle="table"
  showColumns="true"
  showRefresh="true"
  class="table"
>
  <thead class="thead-dark">
    <tr>
      <th data-field="nome">ID</th>
      <th data-field="cpf">TITULO</th>
      <th data-field="celular">NOTICIAS</th>
    </tr>
  </thead>
  <% if(noticias == ''){ %>

  <% } else { %>
    <tbody>
 
        <tr>
          <td><%= noticias[0].id_noticia %></td>
          <td><%= noticias[0].titulo %></td>
          <td><%= noticias[0].noticia %></td>
        </tr>
     
    </tbody>
  <% } %>
</table>




